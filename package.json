{
  "name": "@semabit/cordova-icon",
  "version": "1.4.0",
  "description": "Automatic icon resizing for Cordova",
  "main": "index.js",
  "preferGlobal": true,
  "bin": {
    "cordova-icon": "bin/cordova-icon"
  },
  "directories": {
    "bin": "./bin"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/semabit/cordova-icon.git"
  },
  "keywords": [
    "cordova",
    "icon",
    "resize"
  ],
  "author": "Alex Disler",
  "license": "MIT",
  "homepage": "https://github.com/semabit/cordova-icon",
  "dependencies": {
    "colors": "^0.6.2",
    "fs-extra": "^0.30.0",
    "imagemagick": "^0.1.3",
    "minimist": "^1.2.0",
    "q": "^1.0.1",
    "underscore": "^1.6.0",
    "xml2js": "^0.4.3"
  },
  "devDependencies": {
    "release-it": "^14.4.1"
  },
  "release-it": {
    "git": {
      "commitMessage": "Release v${version}",
      "tagName": "v${version}",
      "tagArgs": "-s"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_TOKEN_CLI_RELEASER"
    },
    "npm": {
      "publish": true
    }
  }
}
